<%
  if @lang_uri then
    base = "/#{@lang_uri}/"
  else
    base = "/"
  end
  page = request.path_info[1..-1]
  page.length > 0 || page = 'index'
  lang = I18n.locale.to_s.scan(/^[a-z]+/).first.downcase
  lANG = lang.upcase # Note l is lowercase
%>
<!DOCTYPE html>
<html dir="ltr" lang="<%= lang %>">
  <head>
    <meta name="description" content="<%= t("meta.description.#{page}") %>" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="ROBOTS" content="INDEX, FOLLOW" />
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta property="og:site_name" content="Raúl Pedroche" />
    <meta property="og:image" content="http://www.raulpedroche.es/images/raulete.jpeg" />
    <meta name="google-site-verification" content="<%= ENV['GOOGLE_SITE_VERIFICATION'] %>" />
    <link rel="stylesheet" type="text/css" href="//brick.a.ssl.fastly.net/EB+Garamond:400" />
    <link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/bootstrap/3.1.1/css/bootstrap.min.css" />
    <link rel="stylesheet" type="text/css" href="/css/starter-template.css" />
    <link rel="stylesheet" type="text/css" href="/css/footer.css" />
    <link rel="icon" href="/favicon.ico" type="image/x-icon" />
    <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon" />
    <link rel="alternate" hreflang="en"
    href="http://www.raulpedroche.es/en<%= request.path_info %>" />
    <link rel="alternate" hreflang="es"
    href="http://www.raulpedroche.es/es<%= request.path_info %>" />
    <title>Raúl Pedroche</title>
  </head>
  <body>
    <header class="navbar navbar-inverse navbar-fixed-top" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
        <a class="navbar-brand" href="<%= base %>">Raúl Pedroche</a>
        </div>
        <div class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li <%= if page == 'index' then 'class="active"' end %>>
              <a href="<%= base %>"><%= t('header.about') %></a>
            </li>
            <li class="dropdown <%= if page == 'resume' or page == 'extended' then 'active' end %>">
              <a href="<%= base %>resume" class="dropdown-toggle" data-toggle="dropdown"><%= t('header.resume.title') %> <b class="caret"></b></a>
              <ul class="dropdown-menu">
                <li><a href="<%= base %>resume"><%= t('header.resume.terse') %></a></li>
                <li><a href="<%= base %>extended"><%= t('header.resume.extended') %></a></li>
              </ul>
            </li>
            <li <%= if page == 'contact' then 'class="active"' end %>>
              <a href="<%= base %>contact"><%= t('header.contact') %></a>
            </li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= t('header.language.title') %> <b class="caret"></b></a>
              <ul class="dropdown-menu">
                <li><a href="/es<%= request.path_info %>"><%= t('header.language.spanish') %></a></li>
                <li><a href="/en<%= request.path_info %>"><%= t('header.language.english') %></a></li>
              </ul>
            </li>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </header>
    <div class="container">
      <div class="starter-template">
        <%= yield %>
      </div><!-- starter-template -->
    </div><!-- container -->
    <footer id="footer">
      <div class="container">
        <p>
        <a href="http://es.linkedin.com/in/raulpedrochenovillo/"><img src="/images/linkedin.png" alt="[LinkedIn]" /></a>
        <a href="https://twitter.com/pedrocheisback"><img src="/images/twitter.png" alt="[Twitter]" /></a>
        <a href="https://www.google.com/+Ra%C3%BAlPedrocheNovillo"><img src="/images/googleplus.png" alt="[G+]" /></a>
        <a href="https://www.facebook.com/raul.pedrochenovillo"><img src="/images/facebook.png" alt="[FB]" /></a>
        <a href="http://raulete.tumblr.com/"><img src="/images/tumblr.png" alt="[Tumblr]" /></a>
        <a href="https://github.com/pecio"><img src="/images/github.png" alt="[GitHub]" /></a>
        <a href="http://stackoverflow.com/users/706716/raul-pedroche"><img src="/images/stackoverflow.png" alt="[StackOverflow]" /></a>
        <a href="http://www.goodreads.com/user/show/19539158-ra-l-pedroche"><img src="/images/goodreads.png" alt="[GoodReads]" /></a>
        </p>
      </div>
    </footer>

    <script src="//cdn.jsdelivr.net/jquery/1.11.0/jquery.min.js">
    </script>
    <script src="//cdn.jsdelivr.net/bootstrap/3.1.1/js/bootstrap.min.js">
    </script>
    <script src="/js/raulete.js"></script>
    <% if request.path_info == '/contact' then %>
      <script src="//cdn.jsdelivr.net/jquery.validation/1.12.0/jquery.validate.min.js">
      </script>
      <script src="<%= base %>contactform.js"></script>
    <% end %>
  </body>
</html>
